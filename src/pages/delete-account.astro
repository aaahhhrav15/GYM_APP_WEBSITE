---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Delete Account - FitMe">
	<main>
		<!-- Delete Account Section -->
		<section class="delete-account-section">
			<div class="container">
				<div class="delete-account-content">
					<div class="back-navigation">
						<a href="/" class="back-link">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none">
								<path d="M19 12H5m7-7l-7 7 7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							Back to Home
						</a>
					</div>
					
					<div class="delete-account-header">
						<h1>Request Account <span class="gradient-text">Deletion</span></h1>
						<p class="description">
							We're sorry to see you go. Fill out the form below to request deletion of your FitMe account and all associated data.
						</p>
					</div>

					<div class="form-container">
						<div class="form-card">
							<div class="form-icon">
								<svg width="32" height="32" viewBox="0 0 24 24" fill="none">
									<path d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
							</div>
							<h2>Account Deletion Request</h2>
							<p class="form-subtitle">Please provide the following information to process your request</p>
							
							<form
								action="https://formspree.io/f/your-form-id"
								method="POST"
								class="delete-account-form"
							>
								<div class="form-group">
									<label for="name">Full Name</label>
									<input type="text" id="name" name="name" required placeholder="Enter your full name" />
								</div>
								
								<div class="form-group">
									<label for="email">Email Address</label>
									<input type="email" id="email" name="email" required placeholder="Enter your registered email" />
								</div>
								
								<div class="form-group">
									<label for="phone">Phone Number</label>
									<input type="tel" id="phone" name="phone" required placeholder="Enter your registered phone number" />
								</div>
								
								<div class="form-group">
									<label for="reason">Reason for Deletion (Optional)</label>
									<textarea id="reason" name="reason" rows="4" placeholder="Help us improve by sharing why you're leaving"></textarea>
								</div>
								
								<div class="form-actions">
									<button type="submit" class="btn btn-primary">
										<svg width="20" height="20" viewBox="0 0 24 24" fill="none">
											<path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
										</svg>
										Request Account Deletion
									</button>
									<a href="/" class="btn btn-outline">Cancel</a>
								</div>
							</form>
						</div>
						
						<div class="info-card">
							<h3>What happens when you delete your account?</h3>
							<ul class="info-list">
								<li>
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none">
										<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
									All your personal data will be permanently deleted
								</li>
								<li>
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none">
										<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
									Your workout history and progress will be removed
								</li>
								<li>
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none">
										<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
									You'll lose access to all premium features
								</li>
								<li>
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none">
										<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
									This action cannot be undone
								</li>
							</ul>
							<div class="contact-info">
								<p><strong>Need help instead?</strong></p>
								<p>Contact our support team at <a href="mailto:official@meeraaitech.com">official@meeraaitech.com</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="footer">
			<div class="container">
				<div class="footer-content">
					<div class="footer-brand">
						<img src="/image.png" alt="FitMe" class="footer-logo" />
						<p>Track your fitness journey with confidence</p>
					</div>
					<div class="footer-links">
						<div class="footer-column">
							<h4>Legal</h4>
							<ul>
								<li><a href="/privacy">Privacy Policy</a></li>
								<li><a href="/terms">Terms & Conditions</a></li>
							</ul>
						</div>
						<div class="footer-column">
							<h4>Support</h4>
							<ul>
								<li><a href="mailto:official@meeraaitech.com">Contact Us</a></li>
								<li><a href="#">Help Center</a></li>
							</ul>
						</div>
					</div>
				</div>
				<div class="footer-bottom">
					<p>&copy; 2025 FitMe. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</main>
</Layout>

<style>
	/* Global Styles */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		line-height: 1.6;
		color: #1a1a1a;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
	}

	.gradient-text {
		background: linear-gradient(135deg, #c3f53c 0%, #a8e6cf 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	/* Buttons */
	.btn {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 16px 32px;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 600;
		font-size: 16px;
		transition: all 0.3s ease;
		border: 2px solid transparent;
		cursor: pointer;
	}

	.btn-primary {
		background: linear-gradient(135deg, #c3f53c 0%, #a8e6cf 100%);
		color: #1a1a1a;
		box-shadow: 0 4px 20px rgba(195, 245, 60, 0.3);
		border: none;
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 30px rgba(195, 245, 60, 0.4);
	}

	.btn-outline {
		background: transparent;
		color: #1a1a1a;
		border-color: #e5e5e5;
	}

	.btn-outline:hover {
		background: #f8f8f8;
		transform: translateY(-2px);
	}

	/* Delete Account Section */
	.delete-account-section {
		padding: 60px 0;
		background: linear-gradient(135deg, #f8fffe 0%, #f0fff4 100%);
		min-height: calc(100vh - 80px);
		position: relative;
		overflow: hidden;
	}

	.delete-account-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at 70% 20%, rgba(195, 245, 60, 0.1) 0%, transparent 50%);
		pointer-events: none;
	}

	.delete-account-content {
		position: relative;
		z-index: 1;
	}

	.back-navigation {
		margin-bottom: 40px;
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		color: #666;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
		padding: 8px 16px;
		border-radius: 8px;
	}

	.back-link:hover {
		color: #1a1a1a;
		background: rgba(195, 245, 60, 0.1);
		transform: translateX(-4px);
	}

	.delete-account-header {
		text-align: center;
		margin-bottom: 60px;
	}

	.delete-account-header h1 {
		font-size: 3rem;
		font-weight: 800;
		line-height: 1.2;
		margin-bottom: 24px;
	}

	.delete-account-header .description {
		font-size: 1.25rem;
		color: #666;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.form-container {
		display: grid;
		grid-template-columns: 1fr 350px;
		gap: 60px;
		max-width: 1000px;
		margin: 0 auto;
	}

	.form-card {
		background: white;
		border-radius: 24px;
		padding: 48px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(195, 245, 60, 0.2);
	}

	.form-icon {
		width: 80px;
		height: 80px;
		background: linear-gradient(135deg, rgba(195, 245, 60, 0.2) 0%, rgba(168, 230, 207, 0.2) 100%);
		border-radius: 20px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 24px;
		color: #c3f53c;
	}

	.form-card h2 {
		font-size: 1.75rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 8px;
		color: #1a1a1a;
	}

	.form-subtitle {
		text-align: center;
		color: #666;
		margin-bottom: 40px;
		font-size: 1rem;
	}

	.delete-account-form {
		display: flex;
		flex-direction: column;
		gap: 24px;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		font-weight: 600;
		color: #1a1a1a;
		margin-bottom: 8px;
		font-size: 0.95rem;
	}

	.form-group input,
	.form-group textarea {
		padding: 16px 20px;
		border: 2px solid #f0f0f0;
		border-radius: 12px;
		font-size: 1rem;
		background: #fafafa;
		transition: all 0.3s ease;
		font-family: inherit;
	}

	.form-group input:focus,
	.form-group textarea:focus {
		outline: none;
		border-color: #c3f53c;
		background: white;
		box-shadow: 0 0 0 3px rgba(195, 245, 60, 0.1);
	}

	.form-group textarea {
		resize: vertical;
		min-height: 100px;
	}

	.form-actions {
		display: flex;
		gap: 16px;
		margin-top: 16px;
	}

	.form-actions .btn {
		flex: 1;
		justify-content: center;
	}

	.info-card {
		background: white;
		border-radius: 24px;
		padding: 32px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.05);
		border: 1px solid #f0f0f0;
		height: fit-content;
	}

	.info-card h3 {
		font-size: 1.25rem;
		font-weight: 700;
		margin-bottom: 20px;
		color: #1a1a1a;
	}

	.info-list {
		list-style: none;
		margin-bottom: 24px;
	}

	.info-list li {
		display: flex;
		align-items: flex-start;
		gap: 12px;
		margin-bottom: 12px;
		color: #666;
		font-size: 0.95rem;
		line-height: 1.5;
	}

	.info-list li svg {
		color: #c3f53c;
		margin-top: 2px;
		flex-shrink: 0;
	}

	.contact-info {
		padding-top: 24px;
		border-top: 1px solid #f0f0f0;
	}

	.contact-info p {
		font-size: 0.95rem;
		color: #666;
		margin-bottom: 4px;
	}

	.contact-info p:first-child {
		font-weight: 600;
		color: #1a1a1a;
	}

	.contact-info a {
		color: #c3f53c;
		text-decoration: none;
		font-weight: 500;
	}

	.contact-info a:hover {
		text-decoration: underline;
	}

	/* Footer */
	.footer {
		background: #0f0f0f;
		color: white;
		padding: 60px 0 20px;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		margin-bottom: 40px;
	}

	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	.footer-logo {
		width: 60px;
		height: 60px;
		border-radius: 12px;
	}

	.footer-brand p {
		color: #ccc;
		font-size: 1.1rem;
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 40px;
	}

	.footer-column h4 {
		font-size: 1.1rem;
		font-weight: 600;
		margin-bottom: 16px;
		color: white;
	}

	.footer-column ul {
		list-style: none;
	}

	.footer-column ul li {
		margin-bottom: 8px;
	}

	.footer-column ul li a {
		color: #ccc;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-column ul li a:hover {
		color: #c3f53c;
	}

	.footer-bottom {
		border-top: 1px solid #333;
		padding-top: 20px;
		text-align: center;
		color: #999;
	}

	/* Responsive Design */
	@media (max-width: 968px) {
		.form-container {
			grid-template-columns: 1fr;
			gap: 40px;
		}

		.info-card {
			order: -1;
		}
	}

	@media (max-width: 768px) {
		.delete-account-section {
			padding: 40px 0;
		}

		.delete-account-header h1 {
			font-size: 2.5rem;
		}

		.form-card {
			padding: 32px 24px;
		}

		.form-actions {
			flex-direction: column;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 40px;
		}

		.footer-links {
			grid-template-columns: 1fr;
			gap: 30px;
		}
	}

	@media (max-width: 480px) {
		.delete-account-header h1 {
			font-size: 2rem;
		}

		.delete-account-header .description {
			font-size: 1.1rem;
		}

		.form-card {
			padding: 24px 20px;
		}
	}
</style>