</Layout>

<style>
	.legal-page {
		padding: 40px 0 80px;
		background: #fafafa;
		min-height: 100vh;
	}

	.legal-header {
		text-align: center;
		margin-bottom: 60px;
		padding: 60px 0;
		background: white;
		border-radius: 20px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		color: #666;
		text-decoration: none;
		margin-bottom: 24px;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.back-link:hover {
		color: #c3f53c;
	}

	.legal-header h1 {
		font-size: 3rem;
		font-weight: 700;
		color: #1a1a1a;
		margin-bottom: 16px;
	}

	.last-updated {
		color: #666;
		font-size: 1.1rem;
	}

	.legal-content {
		background: white;
		border-radius: 20px;
		padding: 60px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
		max-width: 900px;
		margin: 0 auto;
	}

	.legal-section {
		margin-bottom: 48px;
	}

	.legal-section:last-child {
		margin-bottom: 0;
	}

	.legal-section h2 {
		font-size: 1.8rem;
		font-weight: 600;
		color: #1a1a1a;
		margin-bottom: 24px;
		padding-bottom: 12px;
		border-bottom: 2px solid #c3f53c;
	}

	.legal-section h3 {
		font-size: 1.3rem;
		font-weight: 600;
		color: #333;
		margin: 32px 0 16px;
	}

	.legal-section h4 {
		font-size: 1.1rem;
		font-weight: 600;
		color: #333;
		margin: 16px 0 8px;
	}

	.legal-section p {
		color: #555;
		line-height: 1.7;
		margin-bottom: 16px;
		font-size: 1rem;
	}

	.legal-section a {
		color: #c3f53c;
		text-decoration: none;
		font-weight: 500;
	}

	.legal-section a:hover {
		text-decoration: underline;
	}

	.legal-section ul {
		margin: 16px 0;
		padding-left: 24px;
	}

	.legal-section li {
		color: #555;
		line-height: 1.7;
		margin-bottom: 8px;
		font-size: 1rem;
	}

	.legal-section li strong {
		color: #333;
		font-weight: 600;
	}

	.contact-info {
		margin-top: 24px;
	}

	.contact-item {
		padding: 24px;
		background: #f8f8f8;
		border-radius: 12px;
		border-left: 4px solid #c3f53c;
	}

	.contact-item p {
		margin: 0;
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.legal-content {
			padding: 40px 24px;
		}

		.legal-header {
			padding: 40px 24px;
		}

		.legal-header h1 {
			font-size: 2.2rem;
		}

		.legal-section h2 {
			font-size: 1.5rem;
		}
	}
</style>